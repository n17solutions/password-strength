.strength-indicator
	display inline-block
	height 12px
	margin 0px 0px 6px
	padding 0
	list-style none

	>
		.point
			background-color #ccc
			border-radius 2px
			display inline-block
			height 6px
			margin-right 1px
			width 30px

.danger
	background-color #f00 !important

.warning
	background-color #ff0 !important

.success
	background-color #0f0 !important